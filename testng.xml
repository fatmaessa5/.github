<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Automation Exercise Suite">
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>
    <test name="Tests">
        <classes>
            <class name="Testpages.LoginUserTest"/>
            <class name="Testpages.LoginWithInvalidCredentialsTest"/>
        </classes>
    </test>
    <test name="User Registration and Login Tests">
        <classes>
            <class name="AutomationExerciseApi.RegisterAPI"/>
            <class name="AutomationExerciseApi.LoginTest"/>
            <class name="AutomationExerciseApi.InvalidLoginTest"/>
            <class name="AutomationExerciseApi.EmptyEmailTest"/>
        </classes>
    </test>
</suite>
